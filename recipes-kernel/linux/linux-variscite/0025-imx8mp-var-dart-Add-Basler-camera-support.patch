+	};
+};
+
+&mipi_csi_1 {
+	status = "disabled";
+};
+
+&cameradev {
+	status = "okay";
+};
+
+&isi_0 {
+	status = "okay";
+	fsl,chain_buf;
+};
+
+&isi_1 {
+	status = "disabled";
